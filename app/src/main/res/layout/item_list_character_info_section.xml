<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="name"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/character_info_section_margin_start"
            android:paddingEnd="@dimen/character_info_section_margin_end"
            android:text="@{String.format(@string/character_info_element(name))}"
            tools:text="Nombre del recurso" />

    </FrameLayout>

</layout>
